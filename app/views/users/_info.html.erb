    <div class="col-md-3">
      <h2>User info</h2>

      <%= image_tag user.get_profile_image(100,100) %>

      <table class="table">
        <thead>
          <th></th>
          <th></th>
        </thead>
        <tr>
          <td>name:</td>
          <td><%= user.name %></td>
        </tr>

        <tr>
