


<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
      <%= form_for(@user) do |f| %>
      <% if @user.errors.any? %>
    <h3><%= @user.errors.count %>errors prohibited this book from being saved:</h3>

    <% @user.errors.full_messages.each do |message| %>
<ul>
  <li><%= message %></li>
</ul>

