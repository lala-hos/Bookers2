<% end %>

      <div class="form-group">
        <label for="user_name">Name</label>
        <%= f.text_field :name, autofocus: true, class:"form-control name", id:"inputEmail", placeholder:"名前"%>
      </div>
      <div class="form-group">
        <label for="user_image">Image</label>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
      </div>
      <div class="form-group">
        <label for="user_introduction">Introduction</label>
        <%= f.text_area :introduction, autofocus: true, class:"form-control introduction", id:"inputEmail" %>
      </div>
      <div class="form-group">
      <%= f.submit "Update User",class:"btn btn-secondary" %>

      </div>
<%end%>
</div>
</div>

</div>

