<%= render '/users/info', user: @user,book: @book %>


<h2>Books</h2>
<div class="col-xs-9">
  <table class="table table-hover table-inverse">

    <thead>
      <th> </th>
      <th>Title</th>
      <th>Opinion</th>
    </thead>

    <% @books.each do |book| %>
    <tr>
      <td><%#= link_to image_tag(f.user, :profile_image, :fill, size:"60*60",
    format: 'jpeg', fallback: "no_image.jpeg"),user_path(f.user.id) %></td>
    <%= link_to user_path(book.user) do %>
      <td><%= image_tag book.user.get_profile_image(100,100) %>></td>
      <% end %>

      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </table>
</div>